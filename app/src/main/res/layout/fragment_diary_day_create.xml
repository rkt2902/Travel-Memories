<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.diary_day_create.DiaryDayCreateFragment">

    <TextView
        android:id="@+id/textView_diaryDayCreate_titlePage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/satisfy"
        android:text="Novo dia"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_diaryDayCreate_title"
        android:layout_width="269dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Título"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_diaryDayCreate_titlePage" />

    <EditText
        android:id="@+id/editText_diaryDayCreate_body"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="288dp"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_style"
        android:padding="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/textView_diaryDayCreate_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_diaryDayCreate_title" />

    <TextView
        android:id="@+id/textView_diaryDayCreate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_diaryDayCreate_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_diaryDayCreate_date"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/button_background"
        android:clickable="true"
        android:foregroundTint="#001B1B1B"
        android:gravity="left"
        android:letterSpacing="0"
        android:lineSpacingExtra="0dp"
        android:scrollbarSize="0dp"
        android:textSize="1dp"
        app:icon="@drawable/ic_baseline_calendar_month_24"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_diaryDayCreate_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/button_border"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button_diaryDayCreate_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/button_background"
        android:foregroundTint="#1B1B1B"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/button_border"
        app:strokeWidth="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>